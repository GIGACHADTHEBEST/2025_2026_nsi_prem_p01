def decomposer_billets(montant):
    if montant % 5 != 0:
        return ("Le montant doit Ãªtre un multiple de 5.")

    billets = {}
    reste = montant

    billets[50], reste = divmod(reste, 50)
    billets[20], reste = divmod(reste, 20)
    billets[10], reste = divmod(reste, 10)
    billets[5], reste = divmod(reste, 5)

    return billets

def afficher_billets(billets):
    print("Vous recevrez :")
    for valeur, quantite in billets.items():
        print(f"- {quantite} billet(s) de {valeur}$")
